<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- Progress bar to show first -->

    <LinearLayout
        android:id="@+id/layout_pgb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </ProgressBar>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/progressbar_loading"
            android:textColor="#000000" />
    </LinearLayout>

    <ListView
        android:id="@+id/listView_search_result_movies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/item_margin"
        android:layout_marginLeft="@dimen/related_movie_margin_left_right"
        android:layout_marginRight="@dimen/related_movie_margin_left_right"
        android:layout_marginTop="@dimen/item_margin"
        android:divider="@android:color/transparent"
        android:dividerHeight="@dimen/related_movie_margin_left_right" />

</LinearLayout>